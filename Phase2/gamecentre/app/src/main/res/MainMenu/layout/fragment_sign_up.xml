<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_marginTop="170dp"
    android:layout_alignParentStart="true"
    android:layout_marginStart="30dp"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="30dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="100dp">

    <ImageView
        android:id="@+id/imageViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_username"
        tools:ignore="ContentDescription"/>

    <EditText
        android:id="@+id/UsernameSignUpInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/imageViewUsername"
        android:layout_marginStart="50dp"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:hint="@string/username_input"
        tools:ignore="Autofill"/>

    <TextView
        android:id="@+id/UsernameSignUpIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageViewUsername"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@id/imageViewUsername"
        android:layout_marginStart="50dp"
        android:textColor="@color/warning"/>

    <ImageView
        android:id="@+id/imageViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/ic_password"
        tools:ignore="ContentDescription"/>

    <EditText
        android:id="@+id/PasswordSignUpInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageViewPassword"
        android:layout_alignStart="@id/imageViewPassword"
        android:layout_marginStart="50dp"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:hint="@string/password_input"
        tools:ignore="Autofill"/>

    <ImageView
        android:id="@+id/imageViewConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:srcCompat="@drawable/ic_confirm_password"
        tools:ignore="ContentDescription"/>

    <EditText
        android:id="@+id/PasswordConfirmInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewConfirmPassword"
        android:layout_alignStart="@id/imageViewConfirmPassword"
        android:layout_marginStart="50dp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:hint="@string/password_confirm"
        tools:ignore="Autofill"/>

    <TextView
        android:id="@+id/PasswordConfirmIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageViewConfirmPassword"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@+id/imageViewConfirmPassword"
        android:layout_marginStart="50dp"
        android:textColor="@color/warning"/>

    <Button
        android:id="@+id/SwitchToSignInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:text="@string/sign_in"/>

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dp"
        android:text="@string/sign_up"/>

</RelativeLayout>