<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_password"
        tools:ignore="ContentDescription"/>

    <EditText
        android:id="@+id/NewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageViewNewPassword"
        android:layout_alignStart="@id/imageViewNewPassword"
        android:layout_marginStart="50dp"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:hint="@string/change_password_input"
        tools:ignore="Autofill"/>

    <ImageView
        android:id="@+id/imageViewConfirmNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/ic_confirm_password"
        tools:ignore="ContentDescription"/>

    <EditText
        android:id="@+id/NewPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewConfirmNewPassword"
        android:layout_alignStart="@id/imageViewConfirmNewPassword"
        android:layout_marginStart="50dp"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:hint="@string/change_confirm_password_input"
        tools:ignore="Autofill"/>

</RelativeLayout>